{
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 6,
		"ecmaFeatures": {
			"experimentalObjectRestSpread": true,
			"modules": true,
			"classes": true
		},
		"sourceType": "module"
	},
	"env": {
		"node": true,
		"browser": true,
		"es6": true
	},
	"rules": {
		"indent": [
			2,
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"no-console": 0,
		"newline-per-chained-call": 2
	},
	"extends": [
		"eslint:recommended"
	]
}